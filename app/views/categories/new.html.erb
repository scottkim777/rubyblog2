<h2> new category </h2>
<%= render 'shared/errors', obj: @category %>

    <%= form_for @category do |f| %>
       <div class="form-group row">
         <div class="col-sm-2 col-form-label">
           <%= f.label :name %>
         </div>
         <div class="col-sm-10">
           <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
         </div>
       </div>
       <div class="form-group row">
           <div class="col-sm-10">
             <%# depending on action, we set the text for our button %>
             <%= f.submit "Create Category", class: "btn btn-primary" %>
           </div>
     </div>

    <% end %>
