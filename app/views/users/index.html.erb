<h2> Users </h2>
<div class="flickr_pagination">
    <%= will_paginate @user %>
</div>

<% @user.each do |u| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-10">
        Name: <%= link_to u.username, user_path(u) %>,
        <%= pluralize(u.articles.count, "article") if u.articles %>
      </div>
      <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete User", user_path(u), method: :delete,
             data: { confirm: "Are you sure you want to delete user and all articles?"} %>
          </li>
      <% end %>

    </div>
  </ul>
<% end %>
