<%= render 'shared/errors', obj: @user %>

    <%= form_for @user do |f| %>
       <div class="form-group row">
         <div class="col-sm-2 col-form-label">
           <%= f.label :username %>
         </div>
         <div class="col-sm-10">
           <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
         </div>
       </div>
       <div class="form-group row">
         <div class="col-sm-2 col-form-label">
           <%= f.label :email %>
         </div>
         <div class="col-sm-10">
           <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
         </div>
       </div>

       <div class="form-group row">
         <div class="col-sm-2 col-form-label">
           <%= f.label :password %>
         </div>
         <div class="col-sm-10">
           <%= f.text_field :password, class: "form-control", placeholder: "Password" %>
         </div>
       </div>
       <div class="form-group row">
           <div class="col-sm-10">
             <%# depending on action, we set the text for our button %>
             <%= f.submit current_page?(action: 'new') ? "Sign-Up" : "Update", class: "btn btn-primary" %>
           </div>
     </div>
    <% end %>
